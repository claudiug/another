<div class="col-lg9">
  <div class="page-header">
    <h1>Add a new ITEM!!</h1>
    <% if @item.errors.any? %>
        <div class="alert alert-warning">
          <h2><%= pluralize(@item.errors.count, "error") %> prohibited
            this item from being saved:</h2>
          <ul>
            <% @item.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>
    <div class="col-lg-5">
      <%= form_for @item, class: 'form-horizontal' do |f| %>
          <div class="form-group">
            <%= f.label :title  %>
            <%= f.text_field :title, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :description  %>
            <%= f.text_area :description, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :status  %>
            <%= f.select :status,[['Done', 1], ['Progress', 0]], class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :ranking  %>
            <%= f.text_field(:ranking,  class: 'form-control') %>
          </div>
          <div class="form-group">
            <%= f.submit( class: 'btn btn-default') %>
          </div>
      <%end%>
    </div>
  </div>
</div>